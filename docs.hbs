{{!< default}}

<div class="container mx-auto flex items-center flex-col gap-8">
    <h1 class="site-title line-clamp-2 hover:text-neutral-80 font-bold dark:hover:text-neutral-200 text-3xl md:text-4xl lg:text-5xl">{{@custom.doc_welcome}}</h1>
    <div class="sm:flex-1 bg-gradient-2 rounded-full p-1 cursor-pointer w-72" data-ghost-search>
        <div class="bg-neutral-100 flex items-center justify-between px-6 py-4 rounded-full">
                        <span class="text-accent-green-100 text-xl font-bold hidden sm:block">
                            {{t "Type to search"}}
                        </span>
            {{> "icons/search-normal"}}
        </div>
    </div>
        {{#foreach posts}}
            <p>{{title}} ({{tags}})</p>
        {{/foreach}}
    {{#get "tags" filter="visibility:public" limit="all"}}
        {{#foreach tags}}
            {{#if slug="docs"}}
                {{#if name}}
                    <li><a href="{{url}}">{{name}}</a></li>
                {{/if}}
            {{/if}}
        {{/foreach}}
    {{/get}}
</div>