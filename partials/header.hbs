<header id="gh-head"
        class="gh-head dark:bg-neutral-70/70 sticky top-0 z-30 w-full bg-neutral-300/70 backdrop-blur-xl backdrop-filter">
    <nav class="container relative flex flex-row items-center justify-between py-4">
        <div class="absolute left-1/2 hidden -translate-x-1/2 lg:flex">
            {{navigation}}
        </div>
        <div class="flex items-center gap-4">
            <!--            <button class="burger lg:hidden">-->
            <!--                {{> "icons/hamburger" class="h-6 w-6 cursor-pointer text-neutral-900 dark:text-neutral-100" }}-->
            <!--            </button>-->

            <a href="{{@site.url}}">
                {{#if @site.logo}}
                    <img src="{{@site.logo}}" alt="{{@site.title}}"
                         class="text-neutral-900 dark:text-neutral-100"/>
                {{else}}
                    <div class="text-neutral-900 dark:text-neutral-100">{{@site.title}}</div>
                {{/if}}
            </a>
        </div>

        <button class="burger lg:hidden">
            {{> "icons/hamburger" class="h-6 w-6 cursor-pointer text-neutral-900 dark:text-neutral-100" }}
        </button>

        <div class="hidden items-center gap-8 lg:flex">
            {{#if @site.members_enabled}}
                {{#unless @member}}
                    <button
                        class="py-3.5 px-6 rounded-full bg-primary-green-500 font-bold text-neutral-900 drop-shadow-xl hover:bg-primary-green-300"
                        data-portal="signup">{{t
                        "Join Waitlist"}}</button>
                {{/unless}}
            {{/if}}
        </div>
    </nav>
</header>