{{!--
Re-usable card for linking to posts
--}}

<article class="hover:shadow-card-hover active:shadow-card-pressed rounded-3xl transition duration-300 flex-col {{#if
    isFirst}}sm:col-span-2 sm:row-span-2{{/if}} {{post_class}}">
    <div class="flex gap-2 flex-col">
        <a href="{{url}}" class="flex gap-4 items-center">
            {{#if feature_image}}
                <img
                    class="aspect-[100/100] w-[50px] rounded-xl bg-neutral-400 object-cover object-center transition duration-300 hover:scale-105"
                    src="{{img_url feature_image}}"
                    alt="{{#if
                        feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                />
            {{/if}}
            <h2 class="line-clamp-2 hover:text-neutral-80 font-bold dark:hover:text-neutral-200 {{#if
                isFirst}}text-2xl md:text-3xl lg:text-4xl{{else}}text-base md:text-md lg:text-lg{{/if}}">{{title}}</h2>
        </a>
        <div class="{{#if isFirst}}mt-2 space-y-2{{else}}mt-2 space-y-2{{/if}}">
            <p class="line-clamp-2 text-sm text-neutral-800 dark:text-neutral-80 lg:text-base w-fit">{{excerpt}}</p>
            <div class="flex gap-4 justify-start">
                {{#foreach tags from="2" to="4"}}
                    <a href="{{url}}" class="text-sm font-semibold py-1 px-4 rounded-full bg-primary-yellow-500"
                       style="background-color: {{accent_color}}">{{name}}</a>
                {{/foreach}}
            </div>
            <div class="text-sm text-neutral-700 capitalize">
                {{date timeago="true"}}
            </div>
        </div>
    </div>
</article>